<style>
{
    margin: 0;
    padding: 0;
}
.container
{
    text-align: center;
}
.logo img
{
    width: 5.5%;
}
.open-button
{
    background-color: black;
    color: rgb(236, 155, 155);
    padding: 15px 15px;
    border: none;
    cursor: pointer;
    opacity: 0.8;
    position: fixed;
